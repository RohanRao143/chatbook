# Ignore dependency caches for various languages/frameworks
node_modules/
vendor/
venv/
CEnv/
TEnv/
.bundle/
pip-cache/
__pycache__

# Ignore IDE/editor-specific files
.vscode/
.idea/
*.iml
*.iws
*.ipr
.DS_Store

# Ignore environment configuration files
.env
.env.*
config/local/

