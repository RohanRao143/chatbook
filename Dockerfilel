
FROM python:3.12

# FROM python:3.10-bookworm-slim

WORKDIR /app

# COPY requirements.txt /app/requirements.txt
COPY requirements.txt .

RUN python -m venv /opt/venv
# RUN pip install --no-cache-dir --upgrade -r /code/requirements.txt
RUN /opt/venv/bin/pip install --no-cache-dir -r requirements.txt

RUN /opt/venv/bin/pip install pymupdf
RUN /opt/venv/bin/pip install unstructured["all-docs"]

# RUN apt-get update && apt-get install -y libgl1-mesa-glx

# RUN /opt/venv/bin/pip uninstall -y opencv-python opencv-contrib-python && pip install opencv-python-headless

ENV PATH="/opt/venv/bin:$PATH"

COPY ./app /app

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]


